<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tomer.dragon.widget.MainActivity">
<RelativeLayout
    android:layout_marginBottom="64dp"
    android:padding="20dp"
    android:layout_above="@+id/ad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Choose Your Fighter"
        android:id="@+id/textView" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView" />


</RelativeLayout>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_time"
            android:layout_alignTop="@+id/circle_but"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/circle_but"
            android:layout_toStartOf="@+id/circle_but"
            android:id="@+id/time_cb" />
    <CheckBox
        android:id="@+id/percent_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_percent"
        android:layout_below="@+id/time_cb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/circle_but"
        android:layout_toStartOf="@+id/circle_but" />
        <com.tomer.dragon.widget.CircleButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="64dip"
            android:id="@+id/circle_but"
            android:layout_height="64dip"
            android:padding="22dp"
            android:src="@drawable/tick"
            app:cb_color="#99CC00"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            app:cb_pressedRingWidth="8dip" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9332929961258846/3512767012">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
